{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prettier/prettier": "error",
    "func-names": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "spaced-comment": "error",
    "node/no-unpublished-require": "off"
  }
}
